{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "name": "article"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "description": {
      "type": "string",
      "required": true,
      "maxLength": 160
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "featured_image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "published_by": {
      "type": "string",
      "required": true
    },
    "categories": {
      "via": "articles",
      "collection": "category"
    }
  }
}
